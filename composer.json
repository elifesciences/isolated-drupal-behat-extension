{
    "name": "elife/isolated-drupal-behat-extension",
    "description": "Extension for Behat that tests Drupal sites in isolation",
    "homepage": "https://github.com/elifesciences/isolated-drupal-behat-extension",
    "support": {
        "issues": "https://github.com/elifesciences/isolated-drupal-behat-extension/issues"
    },
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "behat/mink-extension": "~2.0",
        "drupal/drupal-extension": "~3.0",
        "symfony/filesystem": "~2.3",
        "symfony/event-dispatcher": "~2.3",
        "symfony/process": "~2.3"
    },
    "require-dev": {
        "drush/drush": "~7.0",
        "mikey179/vfsStream": "~1.0",
        "phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "psr-4": {
            "eLife\\IsolatedDrupalBehatExtension\\": [
                "./src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eLife\\IsolatedDrupalBehatExtension\\": [
                "./tests"
            ]
        }
    }
}
